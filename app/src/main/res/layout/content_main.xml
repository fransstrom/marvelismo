<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="196dp"
            android:layout_height="57dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/enterNameEdt"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/hint_name"
            android:autofillHints=""
            tools:layout_editor_absoluteY="45dp"/>
    <Button
            android:text="@string/btn_name"
            android:layout_width="179dp"
            android:layout_height="54dp"
            android:id="@+id/showNameBtn"
            android:background="@color/colorAccent" android:textColor="#FFFFFF" android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/enterNameEdt"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="48dp"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginTop="94dp"
            app:layout_constraintTop_toBottomOf="@+id/enterNameEdt" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="89dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="234dp" android:layout_marginBottom="431dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>