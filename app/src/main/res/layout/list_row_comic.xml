<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_width="395dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" tools:srcCompat="@tools:sample/avatars[3]"
                    android:id="@+id/ComicView"/>
            <TextView
                    android:text="comic title"
                    android:layout_width="232dp"
                    android:layout_height="32dp" android:id="@+id/comicTitle"
                    android:layout_marginTop="10dp" android:layout_marginLeft="150dp"/>
            <TextView
                    android:text="id"
                    android:layout_width="213dp"
                    android:layout_height="wrap_content" android:id="@+id/comicId" android:layout_marginLeft="150dp"
                    android:layout_marginTop="50dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>